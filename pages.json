{
  //组件自动引入规则 https://uniapp.dcloud.net.cn/collocation/pages.html#easycom
  "easycom": {
    "autoscan": true,
    "custom": {
      "^x-(.*)": "@/components/x-$1/index.vue"
    }
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "enablePullDownRefresh": false
  },
  "pages": [
    {
      "path": "pages/answerQuestions/index",
      "style": {
        "navigationBarTitleText": "开始答题",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/study/index",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/login/supplementaryFile",
      "style": {
        "navigationBarTitleText": "",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/login/register",
      "style": {
        "navigationBarTitleText": "",
        "navigationStyle": "custom"
      }
    },

    {
      "path": "pages/chooseSchool/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    },
    {
      "path": "pages/courseSelection/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    },
    {
      "path": "pages/classRoom/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    },
    {
      "path": "pages/my/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    },

    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    },

    {
      "path": "pages/404/404",
      "style": {
        "navigationBarTitleText": "404",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/webview/webview",
      "style": {
        "navigationBarTitleText": ""
      }
    },
    {
      "path": "pages/demo/demo",
      "style": {
        "navigationBarTitleText": "扩展"
      }
    }
  ],
  "tabBar": {
    "color": "#3D3D3D",
    "selectedColor": "#3D3D3D",
    "backgroundColor": "#FFFFFF",
    "position": "bottom",
    "borderStyle": "white",
    "iconWidth": "18px",
    "spacing": "5px",
    "iconfontSrc": "static/font/simsun.ttf",
    "list": [
      {
        "pagePath": "pages/study/index",
        "iconPath": "static/tabbar/on_1.png",
        "selectedIconPath": "static/tabbar/in_1.png",
        "text": "学习"
      },
      {
        "pagePath": "pages/chooseSchool/index",
        "iconPath": "static/tabbar/on_2.png",
        "selectedIconPath": "static/tabbar/in_2.png",
        "text": "择校"
      },
      {
        "pagePath": "pages/courseSelection/index",
        "iconPath": "static/tabbar/on_3.png",
        "selectedIconPath": "static/tabbar/in_3.png",
        "text": "选课"
      },
      {
        "pagePath": "pages/classRoom/index",
        "iconPath": "static/tabbar/on_4.png",
        "selectedIconPath": "static/tabbar/in_4.png",
        "text": "课堂"
      },
      {
        "pagePath": "pages/my/index",
        "iconPath": "static/tabbar/on_5.png",
        "selectedIconPath": "static/tabbar/in_5.png",
        "text": "我的"
      }
    ]
  }
}
